{% extends "GeneralLayoutView/GeneralSectionView.html.twig" %}

{% block timeline %}
		<div id="edit-news">
			{{ data.newsform.formstart | raw }}
			{{ data.newsform.news | raw }}
			{{ data.newsform.submit | raw }}
			{{ data.newsform.formend | raw }}
		</div>
		
		<ul>
			{% for itemnews in data.newslist %}
			<li class="item-news">
				<img class="profil-pic-m" src="{{ itemnews.profilephoto }}" alt="photo profil">
				<div class="profile"><a href="{{ itemnews.url }}">{{ itemnews.user }}</a></div><div class="pubdate">{{ itemnews.pubdate }}</div>
                                <div class="content">{{ itemnews.content | raw}}</div>
			</li>
			{% endfor %}
		</ul>
{% endblock %}
