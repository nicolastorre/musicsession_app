{% extends "GeneralLayoutView/GeneralSectionView.html.twig" %}

{% block timeline %}
	<div id="parameterspage">
        <a href="{{ data.logout.url }}" id="logout">{{ data.logout.value }}</a>
		<h2>Account<h2>
		<h3>Change your basic settings.</h3>
		{{ data.parametersform.formstart | raw }}
		{{ data.parametersform.pseudo | raw }}
		{{ data.parametersform.email | raw }}
		{{ data.parametersform.lang | raw }}
		{{ data.parametersform.submit | raw }}
		{{ data.parametersform.formend | raw }}
		<hr>
		<h2>Profile photo<h2>
		<h3>Change your profile photo.</h3>
                {{ data.updatephoto.formstart | raw}}
                {{ data.updatephoto.pic | raw }}
		{{ data.updatephoto.submit | raw }}
		{{ data.updatephoto.formend | raw}}
		<hr>
		<h2>Password<h2>
		<h3>Change your password settings.</h3>
        {{ data.updatepwd.formstart | raw}}
        {{ data.updatepwd.pwd | raw }}
		{{ data.updatepwd.confirmpwd | raw }}
		{{ data.updatepwd.submit | raw }}
		{{ data.updatepwd.formend | raw}}
		<hr>
		<h2>Reporting<h2>
		<h3>Report abusibe behavior.</h3>
        {{ data.signalform.formstart | raw}}
        {{ data.signalform.signal | raw }}
		{{ data.signalform.submit | raw }}
		{{ data.updatepwd.formend | raw}}
		<hr>
		<h2>Remove your account<h2>
		<h3>Delete definitely your account and your informations</h3>
		<a class="button" href="{{ data.deleteaccount.url }}">{{ data.deleteaccount.value }}</a>

	</div>
{% endblock %}
