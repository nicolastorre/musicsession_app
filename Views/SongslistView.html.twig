{% extends "GeneralLayoutView/SectionWithoutSongslistWidgetView.html.twig" %}

{% block head %}
	{{ parent() }}
	<script src="Ressources/public/js/jquery-2.1.3.min.js"></script>
	<script src="Ressources/public/js/jquery.tablesorter/jquery.tablesorter.js"></script>
	<script src="Ressources/public/js/tabletunes.js"></script>
{% endblock %}

{% block dashboardright %}
	{{ parent() }}
	<div id="songlist">
		<h1 class="title">Last songs</h1>
		{% for lasttune in data.lasttune %}
		<ul>
			<li><a href="{{ lasttune.urltune }}">{{ lasttune.title }}, {{ lasttune.composer }}</a></li>
		</ul>
		{% endfor %}
	</div>
{% endblock %}

{% block timeline %}
	<div id="tuneslist">
		<table id="tabletunes" class="tablesorter">
			<thead>
				<th>Title</th>
				<th>Composer</th>
				<th>Category</th>
				<th>Date</th>
				<th></th>
			</thead>
			<tbody>
				{% for itemtune in data.tunelist %}
				<tr class="{{ itemtune.class }}">
					<td>{{ itemtune.title }}</td>
					<td>{{ itemtune.composer }}</td>
					<td>{{ itemtune.category }}</td>
					<td>{{ itemtune.datetune }}</td>
					<td>
						<a href="{{ itemtune.sharedel }}"><div id="sharedel" class="{{ itemtune.sharedelclass }}"></div></a>
						<a href="{{ itemtune.urltune }}"><div class="viewtune"></div></a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}